<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="bottom">


        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <ImageView
            android:id="@+id/squirtle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/pngimg_com___pokemon_squirtle"
            tools:visibility="visible" />

            <ImageView
                android:id="@+id/counter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/background_image"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />

    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/total_monitor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$13.50"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
    </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
                <LinearLayout
                    android:layout_width="484dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="340dp"
                        android:layout_height="100dp"
                        android:text="Option 1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         />

                    <Button
                    android:id="@+id/button"
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:text="Option 2" />



                    <TextView
                        android:id="@+id/customerTalking"
                        android:layout_width="249dp"
                        android:layout_height="98dp"
                        android:text="this is an audio example"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        tools:layout_editor_absoluteX="456dp"
                        tools:layout_editor_absoluteY="152dp" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>

